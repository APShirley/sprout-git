# This file is managed by sprout

pairs:
<% node['sprout']['git']['authors'].each do |author| %>
  <%= "#{author["initials"]}: #{author["name"]}"%><%= author["username"] ? "; #{author["username"]}" : "" %>
<% end %>

email:
  prefix: <%= node['sprout']['git']['prefix'] %>
  domain: <%= node['sprout']['git']['domain'] %>

email_addresses:
<% node['sprout']['git']['authors'].each do |author| %>
<% if author['email'] %>
  <%= "#{author["initials"]}: #{author["email"]}"%>
<% end %>
<% end %>

global: true
